{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "qx": ["../qx"],
      "qx/*": ["../qx/*"],
      "@kermite/shared": ["../shared"],
      "@kermite/shared/*": ["../shared/*"],
      "@kermite/ui": ["../ui"],
      "@kermite/ui/*": ["../ui/*"],
      "@ui-layouter": ["../ui-layouter"],
      "@ui-layouter/*": ["../ui-layouter/*"]
    }
  },
  "include": [
    "./**/*",
    "../qx/**/*",
    "../shared/**/*",
    "../ui/**/*",
    "../ui-layouter/**/*"
  ]
}
