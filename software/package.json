{
  "name": "kermite",
  "productName": "Kermite",
  "version": "0.0.1",
  "main": "dist/shell/index.js",
  "license": "MIT",
  "build": {
    "appId": "com.electron.yourapp",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "private": true,
  "scripts": {
    "postinstall": "electron-rebuild",
    "_packaging_mac": "electron-builder --mac --x64",
    "_packaging_win": "electron-builder --win --x64",
    "build": "ts-node build.ts -x-build",
    "start": "ts-node build.ts -x-watch -x-exec",
    "start:dev": "cross-env NODE_ENV=development ts-node build.ts -x-watch -x-exec",
    "mockview": "cross-env NODE_ENV=development ts-node build.ts -x-mockview",
    "build_support_modules": "ts-node build.ts -x-build-support-modules",
    "clean": "rm -rf dist .cache",
    "typecheck": "tsc",
    "typecheck:full": "tsc -b src/*",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "incver": "npm version patch"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "glob": "^7.1.6",
    "immer": "^8.0.0",
    "node-fetch": "^2.6.1",
    "node-hid": "^2.1.1",
    "serialport": "^9.0.4"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/live-server": "^1.2.0",
    "@types/node-fetch": "^2.5.7",
    "@types/node-hid": "^1.3.0",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "child_process": "^1.0.2",
    "cross-env": "^7.0.3",
    "electron": "11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^4.1.0",
    "estrella": "^1.4.0",
    "live-server": "^1.2.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
