{
  "name": "kermite",
  "productName": "Kermite",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "build": {
    "appId": "com.electron.yourapp",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "scripts": {
    "postinstall": "electron-rebuild",
    "build": "node ./boot.js bundle",
    "start": "node ./boot.js bundle start",
    "start:dev": "cross-env NODE_ENV=development node ./boot.js bundle start",
    "lint": "tsc --noEmit && eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "clean": "rm -rf dist .cache",
    "packaging_mac": "electron-builder --mac --x64",
    "packaging_win": "electron-builder --win --x64"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "glob": "^7.1.6",
    "goober": "^2.0.6",
    "node-fetch": "^2.6.1",
    "node-hid": "^1.3.1",
    "reflect-metadata": "^0.1.13",
    "serialport": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node-fetch": "^2.5.7",
    "@types/node-hid": "^1.3.0",
    "@types/parcel-bundler": "^1.12.1",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "child_process": "^1.0.2",
    "cross-env": "^7.0.2",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "electron-rebuild": "^2.2.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-standard": "^4.0.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
