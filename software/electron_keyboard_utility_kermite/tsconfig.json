{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    // "jsxFactory": "jsx",
    "jsxFactory": "hx",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/ui/**/*"]
}
