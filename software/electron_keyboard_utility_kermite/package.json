{
  "name": "kermite",
  "productName": "Kermite",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": "^13.0.0"
  },
  "build": {
    "appId": "com.electron.yourapp",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "scripts": {
    "postinstall": "electron-rebuild",
    "build": "node ./boot.js bundle",
    "start": "node ./boot.js bundle start",
    "start:dev": "cross-env NODE_ENV=development node ./boot.js bundle start",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint src/ --ext .ts,.tsx",
    "lint:fix": "npx eslint src/ --ext .ts,.tsx --fix",
    "clean": "rm -rf dist .cache",
    "packaging_mac": "electron-builder --mac --x64",
    "packaging_win": "electron-builder --win --x64"
  },
  "dependencies": {
    "fast-equals": "^2.0.0",
    "goober": "^2.0.3",
    "node-hid": "^1.3.0",
    "serialport": "^9.0.0"
  },
  "devDependencies": {
    "@types/node-hid": "^1.2.0",
    "@types/parcel-bundler": "^1.12.1",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "child_process": "^1.0.2",
    "cross-env": "^7.0.2",
    "electron": "^9.1.1",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
