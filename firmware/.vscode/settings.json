{
  "files.associations": {
    "*.c": "cpp"
  },
  "json.schemas": [
    {
      "fileMatch": ["project.json"],
      "schema": {
        "type": "object",
        "properties": {
          "projectId": {
            "type": "string"
          },
          "keyboardName": {
            "type": "string"
          }
        },
        "required": ["projectId", "keyboardName"],
        "additionalProperties": false
      }
    },
    {
      "fileMatch": ["layout.json", "*.layout.json"],
      "schema": {
        "type": "object",
        "properties": {
          "setup": {
            "type": "object",
            "properties": {
              "placementUnit": {
                "type": "string"
              },
              "placementAnchor": {
                "type": "string"
              },
              "keySizeUnit": {
                "type": "string"
              }
            },
            "required": ["placementUnit", "placementAnchor", "keySizeUnit"],
            "additionalProperties": false
          },
          "keyEntities": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "angle": {
                  "type": "number"
                },
                "shape": {
                  "type": "string"
                },
                "keyIndex": {
                  "type": "number"
                },
                "mirrorKeyIndex": {
                  "type": "number"
                },
                "groupIndex": {
                  "type": "number"
                }
              },
              "additionalProperties": false,
              "required": ["x", "y", "angle", "shape"]
            }
          },
          "outlineShapes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "points": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "x": {
                        "type": "number"
                      },
                      "y": {
                        "type": "number"
                      }
                    },
                    "additionalProperties": false,
                    "required": ["x", "y"]
                  }
                },
                "groupIndex": {
                  "type": "number"
                }
              },
              "additionalProperties": false,
              "required": ["points"]
            }
          },
          "transGroups": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "angle": {
                  "type": "number"
                },
                "mirror": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false,
              "required": ["x", "y", "angle"]
            }
          }
        },
        "required": ["setup", "keyEntities", "outlineShapes", "transGroups"],
        "additionalProperties": false
      }
    }
  ]
}
