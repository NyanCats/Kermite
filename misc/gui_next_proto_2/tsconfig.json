{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "jsxFactory": "hx",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".cache", ".local", "dist"]
}
